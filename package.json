{
  "name": "japanese-chatbot",
  "version": "1.0.0",
  "description": "A Japanese language chatbot using Google Gemini API with conversation history support",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "api": "ts-node src/app.ts",
    "api:dev": "nodemon --exec ts-node src/app.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:api": "node api-test.js",
    "clean": "rimraf dist"
  },
  "keywords": [
    "chatbot",
    "japanese",
    "ai",
    "gemini",
    "conversation",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^0.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^2.6.9",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.4",
    "@types/readline-sync": "^1.4.8",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
